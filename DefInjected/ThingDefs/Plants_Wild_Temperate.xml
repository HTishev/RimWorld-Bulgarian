<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="PlantBase" Abstract="True">
    <eType>Plant</eType>
    <category>Plant</category>
    <thingClass>Plant</thingClass>
    <altitudeLayer>LowPlant</altitudeLayer>
    <flammability>1.0</flammability>
    <useStandardHealth>True</useStandardHealth>
    <maxHealth>75</maxHealth>
    <tickerType>Rare</tickerType>
    <selectable>False</selectable>
    <neverMultiSelect>True</neverMultiSelect>
    <drawerType>MapMeshOnly</drawerType>
    <baseMaterialType>PlantCutout</baseMaterialType>
    <plant>
      <harvestDestroys>true</harvestDestroys>
      <harvestingSound>Harvest_Standard</harvestingSound>
      <harvestFinishSound>Harvest_Standard_Finish</harvestFinishSound>
      <sowWork>150</sowWork>
      <fertilityMin>0.5</fertilityMin>
      <fertilityFactorGrowthRate>1.0</fertilityFactorGrowthRate>
      <topWindExposure>0.1</topWindExposure>
      <growthPer20kTicks>0.48</growthPer20kTicks>
      <lifeSpan>200000</lifeSpan>
      <growMinGlow>Overlit</growMinGlow>
      <seedShootMinGrowthPercent>0.6</seedShootMinGrowthPercent>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.00</max>
      </visualSizeRange>
    </plant>
  </ThingDef>


  <!--===========================  Wild - clustering bushes (some harvestable) ==============================-->


  <ThingDef ParentName="PlantBase">
    <defName>PlantRaspberry</defName>
    <label>Raspberry bush</label>
    <maxHealth>120</maxHealth>
    <description>Bushy plant with delicious red berries.</description>
    <beauty>Neutral</beauty>
    <textureFolderPath>Things/Plant/Raspberry</textureFolderPath>
    <selectable>true</selectable>
    <sunShadowInfo>
      <baseWidth>0.6</baseWidth>
      <baseHeight>0.6</baseHeight>
      <tallness>0.2</tallness>
    </sunShadowInfo>
    <fillPercent>0.25</fillPercent>
    <pathCost>30</pathCost>
    <food>
      <quality>Plant</quality>
      <nutrition>40</nutrition>
    </food>
    <plant>
      <harvestTag>Food</harvestTag>
      <harvestDestroys>false</harvestDestroys>
      <harvestedThingDef>RawBerries</harvestedThingDef>
      <harvestYieldRange>
        <min>3</min>
        <max>7</max>
      </harvestYieldRange>
      <fertilityMin>0.5</fertilityMin>
      <wildCommonalityMaxFraction>3.0</wildCommonalityMaxFraction>
      <wildClusterSizeRange>
        <min>2</min>
        <max>5</max>
      </wildClusterSizeRange>
      <wildClusterRadius>4</wildClusterRadius>
      <visualSizeRange>
        <min>0.7</min>
        <max>1.1</max>
      </visualSizeRange>
      <growthPer20kTicks>0.45</growthPer20kTicks>
      <topWindExposure>0.3</topWindExposure>
      <seedShootRadius>10</seedShootRadius>
      <lifeSpan>800000</lifeSpan>
      <fertilityFactorGrowthRate>0.5</fertilityFactorGrowthRate>
    </plant>
  </ThingDef>


  <ThingDef ParentName="PlantBase">
    <defName>PlantBush</defName>
    <label>Bush</label>
    <maxHealth>120</maxHealth>
    <description>Short shrub. Does not typically talk.</description>
    <beauty>Neutral</beauty>
    <textureFolderPath>Things/Plant/Bush</textureFolderPath>
    <selectable>true</selectable>
    <sunShadowInfo>
      <baseWidth>0.37</baseWidth>
      <baseHeight>0.37</baseHeight>
      <tallness>0.2</tallness>
    </sunShadowInfo>
    <fillPercent>0.25</fillPercent>
    <pathCost>30</pathCost>
    <food>
      <quality>Plant</quality>
      <nutrition>30</nutrition>
    </food>
    <plant>
      <fertilityMin>0.4</fertilityMin>
      <wildClusterSizeRange>
        <min>2</min>
        <max>5</max>
      </wildClusterSizeRange>
      <wildClusterRadius>4</wildClusterRadius>
      <visualSizeRange>
        <min>0.7</min>
        <max>1.1</max>
      </visualSizeRange>
      <growthPer20kTicks>0.30</growthPer20kTicks>
      <topWindExposure>0.3</topWindExposure>
      <seedShootRadius>10</seedShootRadius>
      <lifeSpan>800000</lifeSpan>
      <fertilityFactorGrowthRate>0.5</fertilityFactorGrowthRate>
    </plant>
  </ThingDef>



  <!--======================= Wild plants - carpets ========================-->

  <ThingDef ParentName="PlantBase">
    <defName>PlantGrass</defName>
    <label>Grass</label>
    <maxHealth>85</maxHealth>
    <description>Wild grass. Grows anywhere there is a little light and minimally fertile ground.</description>
    <beauty>NiceTiny</beauty>
    <textureFolderPath>Things/Plant/Grass</textureFolderPath>
    <food>
      <quality>Plant</quality>
      <nutrition>30</nutrition>
    </food>
    <plant>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>
        <min>0.4</min>
        <max>0.6</max>
      </visualSizeRange>
      <growthPer20kTicks>0.65</growthPer20kTicks>
      <topWindExposure>0.4</topWindExposure>
      <seedShootRadius>10</seedShootRadius>
      <lifeSpan>300000</lifeSpan>
      <fertilityFactorGrowthRate>0.90</fertilityFactorGrowthRate>
      <fertilityFactorPlantChance>0.90</fertilityFactorPlantChance>
    </plant>
  </ThingDef>


  <ThingDef ParentName="PlantBase">
    <defName>PlantDandelion</defName>
    <label>Dandelions</label>
    <maxHealth>85</maxHealth>
    <description>Common small flower. Though it is often considered a weed because of its fecundity, it is pleasant to look at</description>
    <beauty>NiceTiny</beauty>
    <textureFolderPath>Things/Plant/Dandelion</textureFolderPath>
    <food>
      <quality>Plant</quality>
      <nutrition>30</nutrition>
    </food>
    <plant>
      <sowableGround>true</sowableGround>
      <fertilityMin>0.05</fertilityMin>
       <maxMeshCount>25</maxMeshCount>
      <visualSizeRange>
        <min>0.3</min>
        <max>0.4</max>
      </visualSizeRange>
      <growthPer20kTicks>0.65</growthPer20kTicks>
      <topWindExposure>0.3</topWindExposure>
      <seedShootRadius>2.5</seedShootRadius>
      <lifeSpan>240000</lifeSpan>
      <fertilityFactorGrowthRate>1</fertilityFactorGrowthRate>
      <fertilityFactorPlantChance>1.0</fertilityFactorPlantChance>
      <wildClusterSizeRange>
        <min>2</min>
        <max>6</max>
      </wildClusterSizeRange>
      <wildClusterRadius>4</wildClusterRadius>
    </plant>
  </ThingDef>



  <!--============================ Wild - Trees ============================-->

  <ThingDef ParentName="PlantBase" Name="TreeBase" Abstract="True">
    <maxHealth>300</maxHealth>
    <description>A tree.</description>
    <beauty>Neutral</beauty>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <selectable>true</selectable>
    <fillPercent>0.35</fillPercent>
    <sunShadowInfo>
      <baseWidth>0.3</baseWidth>
      <baseHeight>0.3</baseHeight>
      <tallness>0.3</tallness>
    </sunShadowInfo>
    <passability>Impassable</passability>
    <plant>
      <harvestingSound>Harvest_Tree</harvestingSound>
      <harvestFinishSound>Harvest_Tree_Finish</harvestFinishSound>
      <harvestWork>1500</harvestWork>
      <harvestDestroys>true</harvestDestroys>
      <harvestedThingDef>WoodLog</harvestedThingDef>
      <harvestYieldRange>
        <min>10</min>
        <max>50</max>
      </harvestYieldRange>
      <harvestTag>Wood</harvestTag>
      <harvestMinGrowth>0.40</harvestMinGrowth>
      <sowableGround>true</sowableGround>
      <sowWork>1500</sowWork>
      <sowRequireWalkableAdjacent>true</sowRequireWalkableAdjacent>
      <visualSizeRange>
        <min>1.3</min>
        <max>2.0</max>
      </visualSizeRange>
      <fertilityMin>0.3</fertilityMin>
      <growthPer20kTicks>0.05</growthPer20kTicks>
      <topWindExposure>0.25</topWindExposure>
      <seedShootRadius>15</seedShootRadius>
      <lifeSpan>3000000</lifeSpan>
      <fertilityFactorGrowthRate>0.5</fertilityFactorGrowthRate>
      <wildClusterSizeRange>
        <min>8</min>
        <max>30</max>
      </wildClusterSizeRange>
      <wildClusterRadius>8</wildClusterRadius>
    </plant>
  </ThingDef>
  

  <ThingDef ParentName="TreeBase">
    <defName>PlantTreeOak</defName>
    <label>Oak tree</label>
    <description>A strong hardwood tree. Slow-going, but its wood is very strong.</description>
    <textureFolderPath>Things/Plant/TreeOak</textureFolderPath>
    <plant>
      <growthPer20kTicks>0.04</growthPer20kTicks>
      <harvestWork>1500</harvestWork>
      <harvestYieldRange>
        <min>10</min>
        <max>50</max>
      </harvestYieldRange>    
     </plant>
  </ThingDef>

  
  
  <ThingDef ParentName="TreeBase">
    <defName>PlantTreePoplar</defName>
    <label>Poplar tree</label>
    <description>A softwood tree. Grows fast, but its wood isn't very strong.</description>
    <textureFolderPath>Things/Plant/TreePoplar</textureFolderPath>
    <plant>
      <growthPer20kTicks>0.06</growthPer20kTicks>
      <harvestWork>900</harvestWork>
      <harvestYieldRange>
        <min>10</min>
        <max>30</max>
      </harvestYieldRange>
    </plant>
  </ThingDef>
  
  
</Defs>