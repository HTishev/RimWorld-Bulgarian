    <overdraw>false</overdraw>
    <targetHitChanceFactor>0.6</targetHitChanceFactor>
	<meleeAttacks>
		<li>
			<damageDef>Scratch</damageDef>
			<damageAmount>6</damageAmount>
		</li>
		<li>
			<damageDef>Bite</damageDef>
			<damageAmount>4</damageAmount>
		</li>
	</meleeAttacks>
    <race>
